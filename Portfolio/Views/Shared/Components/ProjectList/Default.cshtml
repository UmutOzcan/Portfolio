@using EntityLayer.Concrete
@model List<Project>

<div class="section px-2 px-lg-4 pt-5" id="projects">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Projects</h2>
        </div>
        <div class="grid bp-gallery pb-3" data-aos="zoom-in-up" data-aos-delay="100">
            <div class="grid-sizer"></div>
            @foreach (var item in Model)
            {
                <div class="grid-item">
                    <a href="@item.Url">
                        <figure class="portfolio-item">
                            <img src="@item.ImageUrl" data-bp="@item.ImageUrl" height="200"/>
                            <figcaption>
                                <div>For see the project :</div>
                                <h3 class="h5 mb-0">@item.Name</h3>
                            </figcaption>
                        </figure>
                    </a>
                </div>
            }
        </div>
    </div>
</div>