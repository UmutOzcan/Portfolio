@using EntityLayer.Concrete
@model List<Quote>

<div class="section px-3 px-lg-4 pt-5" id="quotes">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Today's Quotes</h2>
        </div>
        <div class="row">
            <!-- Suan icin sadece iki tane daha sonra Date'e gore ayarla' -->
            @foreach (var item in Model)
            {
                <div class="col-md-12 mb-5" data-aos="fade-down" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-right"></i></span><span class="m-2">@item.Text</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">by @item.Person</div>
                            <div class="text-small">@item.Title</div>
                        </div><img class="me-md-3 rounded" src="@item.ImageUrl" width="96" height="96" alt="quote @item.QuoteID" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>
